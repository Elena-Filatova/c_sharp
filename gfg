class Program
{
    static void Main()
        {
            int x = 1, s = 0;
            uint n;
            Console.WriteLine("n=");
            n = Convert.To.Int32 (Console.ReadLine());
            for (int i = 1; i <= n; i++)
            {
                if (i % 2 = 0) x = - Math.Pow(i, i);
                else x = Math.Pow(i, i);
                s = s + x;
            }
            {
                Console.WriteLine("s=" + s);
            }
        }
}
